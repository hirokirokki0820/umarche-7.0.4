<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <h2 class="font-semibold text-xl text-gray-800 leading-tight">
      店舗情報
    </h2>
  </div>
</header>

<div class="mb-3 md:mt-10 md:w-2/3 md:mx-auto">
  <h2 class="text-3xl mb-3 md:text-center"><%= icon_with_text("solid", "store", "店舗情報の編集") %></h2>

  <%= form_with model: @shop, local: true, class: "bg-white px-6 py-5 rounded-md" do |f| %>

    <%# -------- 店舗名 -------- %>
    <div class="mb-3">
      <%= f.label :name, class: "font-semibold block p-1 required" %>
      <div class="relative">
        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
          <span class="text-gray-600">
            <%= icon("solid", "store") %>
          </span>
        </div>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-input" %>
      </div>
    </div>

    <%# -------- 店舗の詳細 -------- %>
    <div class="mb-3">
      <%= f.label :information, class: "font-semibold block p-1 required" %>
      <div class="relative">
        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
          <span class="text-gray-600">
            <%= icon("solid", "circle-info") %>
          </span>
        </div>
        <%= f.text_area :information, autocomplete: "information", class: "form-input", rows: "15" %>
      </div>
    </div>

    <%# -------- 販売有無の切り替え -------- %>
    <div class="mb-3 flex">
      <div class="px-5 flex items-center pl-4 rounded border border-gray-200 dark:border-gray-700">
        <%= f.radio_button :is_selling, "true", id: "is-selling", class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
        <%= f.label :is_selling, "販売中", class: "font-semibold block p-1", value: true, for: "is-selling", class: "py-4 ml-2 w-full text-sm font-medium text-gray-900 dark:text-gray-300" %>
      </div>
      <div class="px-3 flex items-center pl-4 rounded border border-gray-200 dark:border-gray-700">
        <%= f.radio_button :is_selling, "false", id: "not-selling", class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
        <%= f.label :is_selling, "停止中", class: "font-semibold block p-1", value: false, for: "not-selling", class: "py-4 ml-2 w-full text-sm font-medium text-gray-900 dark:text-gray-300" %>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <%= link_to "戻る", :back, class: "btn btn-outline-gray mb-3 md:mb-0 px-8"%>
      <%= f.submit "更新する", class: "btn btn-sky mb-3 md:mb-0" %>
    </div>
  <% end %>

</div>
